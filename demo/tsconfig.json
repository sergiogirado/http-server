{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "lib": [
      "es5",
      "dom",
      "es2015"
    ]
  },
  "include": [
    "../src/**/*",
    "./*"
  ]
}