{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es5",
      "dom",
      "es2015"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}